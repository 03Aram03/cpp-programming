#include <iostream>
#include <cstring>
using namespace std;

class MyString {
private:
    char* str;  
    int sz;      

public:
    MyString() {
        sz = 0;
        str = new char[1];
        str[0] = '\0';
    }

    MyString(const char* s) {
        sz = strlen(s);
        str = new char[sz + 1];
        strcpy(str, s);
    }

    MyString(const MyString& other) {
        sz = other.sz;
        str = new char[sz + 1];
        strcpy(str, other.str);
    }

    ~MyString() {
        delete[] str;
    }

    int length() const {
        return sz;
    }

    void append(const MyString& other) {
        char* newStr = new char[sz + other.sz + 1];
        strcpy(newStr, str);
        strcat(newStr, other.str);

    }
};
